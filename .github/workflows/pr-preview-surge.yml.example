name: Deploy PR Preview (Surge.sh)

# Alternative workflow for Surge.sh deployment
# To use this instead of Netlify:
# 1. Rename this file to pr-preview.yml  
# 2. Rename the Netlify workflow to pr-preview-netlify.yml.disabled
# 3. Set up SURGE_LOGIN and SURGE_TOKEN secrets

on:
  pull_request:
    types: [opened, synchronize, reopened, closed]

jobs:
  deploy-preview:
    runs-on: ubuntu-latest
    if: github.event.action != 'closed'
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install Surge
        run: npm install -g surge

      - name: Deploy to Surge.sh
        run: |
          export SURGE_LOGIN=${{ secrets.SURGE_LOGIN }}
          export SURGE_TOKEN=${{ secrets.SURGE_TOKEN }}
          
          # Create a unique domain for this PR
          PR_DOMAIN="anagram-solver-pr-${{ github.event.number }}.surge.sh"
          
          # Deploy to Surge
          surge . $PR_DOMAIN
          
          echo "DEPLOY_URL=https://$PR_DOMAIN" >> $GITHUB_ENV
        env:
          SURGE_LOGIN: ${{ secrets.SURGE_LOGIN }}
          SURGE_TOKEN: ${{ secrets.SURGE_TOKEN }}

      - name: Comment PR
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: `üöÄ **Preview deployed!** 
              
              ‚úÖ Preview URL: ${{ env.DEPLOY_URL }}
              
              The latest changes from this PR are now live on the preview site. It will be automatically updated when you push new commits.`
            })

  cleanup-preview:
    runs-on: ubuntu-latest
    if: github.event.action == 'closed'
    steps:
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install Surge
        run: npm install -g surge

      - name: Remove deployment
        run: |
          export SURGE_LOGIN=${{ secrets.SURGE_LOGIN }}
          export SURGE_TOKEN=${{ secrets.SURGE_TOKEN }}
          
          PR_DOMAIN="anagram-solver-pr-${{ github.event.number }}.surge.sh"
          surge teardown $PR_DOMAIN --domain $PR_DOMAIN
        env:
          SURGE_LOGIN: ${{ secrets.SURGE_LOGIN }}
          SURGE_TOKEN: ${{ secrets.SURGE_TOKEN }}
        continue-on-error: true

      - name: Comment on PR - Preview Removed
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: 'üóëÔ∏è **Preview deployment removed** - The PR has been closed and the preview deployment has been cleaned up.'
            })