name: Deploy PR Preview (Vercel)

# Alternative workflow for Vercel deployment
# To use this instead of Netlify:
# 1. Rename this file to pr-preview.yml
# 2. Rename the Netlify workflow to pr-preview-netlify.yml.disabled
# 3. Set up VERCEL_TOKEN and VERCEL_PROJECT_ID secrets

on:
  pull_request:
    types: [opened, synchronize, reopened, closed]

jobs:
  deploy-preview:
    runs-on: ubuntu-latest
    if: github.event.action != 'closed'
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          working-directory: ./
          scope: ${{ secrets.VERCEL_ORG_ID }}

  cleanup-preview:
    runs-on: ubuntu-latest
    if: github.event.action == 'closed'
    steps:
      - name: Comment on PR - Preview Removed
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: 'üóëÔ∏è **Preview deployment removed** - The PR has been closed and the preview deployment has been cleaned up.'
            })